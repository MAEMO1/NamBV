// Nam Construction - Prisma Schema
// Database: PostgreSQL (recommended) or MySQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================================================
// ENUMS
// ============================================================================

enum UserRole {
  SUPERADMIN
  ADMIN
}

enum QuoteStatus {
  NEW
  CONTACTED
  SITE_VISIT
  QUOTE_SENT
  NEGOTIATING
  WON
  LOST
  CANCELLED
}

enum BudgetRange {
  UNDER_10K
  RANGE_10K_25K
  RANGE_25K_50K
  RANGE_50K_100K
  OVER_100K
  UNKNOWN
}

// ============================================================================
// USERS - Admin accounts
// ============================================================================

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String    @map("password_hash")
  fullName     String    @map("full_name")
  role         UserRole  @default(ADMIN)
  isActive     Boolean   @default(true) @map("is_active")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  lastLogin    DateTime? @map("last_login")

  // Relations
  assignedQuotes  QuoteRequest[]       @relation("AssignedQuotes")
  createdServices ServiceType[]        @relation("CreatedServices")
  notes           QuoteNote[]
  statusChanges   QuoteStatusHistory[] @relation("ChangedBy")

  @@map("users")
}

// ============================================================================
// SERVICE TYPES - Renovation categories (rubrieken)
// ============================================================================

model ServiceType {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  icon        String?
  isActive    Boolean  @default(true) @map("is_active")
  sortOrder   Int      @default(0) @map("sort_order")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  createdBy   User?                    @relation("CreatedServices", fields: [createdById], references: [id])
  createdById String?                  @map("created_by")
  quotes      QuoteServiceSelection[]

  @@index([isActive, sortOrder])
  @@map("service_types")
}

// ============================================================================
// PROPERTY TYPES - Housing types
// ============================================================================

model PropertyType {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  sortOrder Int      @default(0) @map("sort_order")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  quotes QuoteRequest[]

  @@map("property_types")
}

// ============================================================================
// QUOTE REQUESTS - Main entity for quote submissions
// ============================================================================

model QuoteRequest {
  id              String       @id @default(cuid())
  referenceNumber String       @unique @map("reference_number")
  status          QuoteStatus  @default(NEW)

  // Contact info
  fullName        String       @map("full_name")
  email           String
  phone           String
  postalCode      String       @map("postal_code")
  city            String?
  streetAddress   String?      @map("street_address")

  // Project details
  description     String       @db.Text
  preferredStart  String?      @map("preferred_start")
  budgetRange     BudgetRange? @map("budget_range")
  gdprConsent     Boolean      @default(false) @map("gdpr_consent")

  // Timestamps
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")
  convertedAt     DateTime?    @map("converted_at")

  // Soft delete
  deletedAt       DateTime?    @map("deleted_at")

  // Relations
  propertyType    PropertyType?           @relation(fields: [propertyTypeId], references: [id])
  propertyTypeId  String?                 @map("property_type_id")
  assignedTo      User?                   @relation("AssignedQuotes", fields: [assignedToId], references: [id])
  assignedToId    String?                 @map("assigned_to")
  services        QuoteServiceSelection[]
  photos          QuotePhoto[]
  notes           QuoteNote[]
  statusHistory   QuoteStatusHistory[]

  // Indexes for common queries
  @@index([status])
  @@index([createdAt(sort: Desc)])
  @@index([postalCode])
  @@index([assignedToId])
  @@index([deletedAt])
  @@map("quote_requests")
}

// ============================================================================
// QUOTE SERVICE SELECTIONS - Many-to-many relation
// ============================================================================

model QuoteServiceSelection {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  quote         QuoteRequest @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  quoteId       String       @map("quote_id")
  serviceType   ServiceType  @relation(fields: [serviceTypeId], references: [id], onDelete: Cascade)
  serviceTypeId String       @map("service_type_id")

  @@unique([quoteId, serviceTypeId])
  @@map("quote_service_selections")
}

// ============================================================================
// QUOTE PHOTOS - Uploaded images
// ============================================================================

model QuotePhoto {
  id         String   @id @default(cuid())
  filePath   String   @map("file_path")
  fileName   String   @map("file_name")
  fileSize   Int      @map("file_size")
  mimeType   String   @map("mime_type")
  uploadedAt DateTime @default(now()) @map("uploaded_at")

  // Relations
  quote   QuoteRequest @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  quoteId String       @map("quote_id")

  @@index([quoteId])
  @@map("quote_photos")
}

// ============================================================================
// QUOTE NOTES - Internal admin notes
// ============================================================================

model QuoteNote {
  id        String   @id @default(cuid())
  content   String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  quote   QuoteRequest @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  quoteId String       @map("quote_id")
  user    User         @relation(fields: [userId], references: [id])
  userId  String       @map("user_id")

  @@index([quoteId, createdAt(sort: Desc)])
  @@map("quote_notes")
}

// ============================================================================
// QUOTE STATUS HISTORY - Audit trail for status changes
// ============================================================================

model QuoteStatusHistory {
  id         String       @id @default(cuid())
  fromStatus QuoteStatus? @map("from_status")
  toStatus   QuoteStatus  @map("to_status")
  reason     String?      @db.Text
  changedAt  DateTime     @default(now()) @map("changed_at")

  // Relations
  quote       QuoteRequest @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  quoteId     String       @map("quote_id")
  changedBy   User         @relation("ChangedBy", fields: [changedById], references: [id])
  changedById String       @map("changed_by")

  @@index([quoteId, changedAt(sort: Desc)])
  @@map("quote_status_history")
}

// ============================================================================
// APPOINTMENTS - Adviesgesprek bookings
// ============================================================================

enum AppointmentStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
  NO_SHOW
}

model Appointment {
  id              String            @id @default(cuid())
  referenceNumber String            @unique @map("reference_number")
  status          AppointmentStatus @default(PENDING)

  // Contact info
  fullName        String            @map("full_name")
  email           String
  phone           String
  gemeente        String

  // Appointment details
  appointmentDate DateTime          @map("appointment_date")
  appointmentTime String            @map("appointment_time")

  // Project preferences
  projectType       String?         @map("project_type")
  propertyType      String?         @map("property_type")
  propertyAge       String?         @map("property_age")
  priorities        String[]        @default([])
  materialPreference String?        @map("material_preference")
  budget            String?
  timing            String?
  subsidyInterest   Boolean         @default(false) @map("subsidy_interest")
  paymentSpread     Boolean         @default(false) @map("payment_spread")
  motivation        String?
  message           String?         @db.Text

  // Timestamps
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")

  @@index([status])
  @@index([appointmentDate])
  @@index([createdAt(sort: Desc)])
  @@map("appointments")
}

// ============================================================================
// ANALYTICS - Privacy-friendly website analytics
// ============================================================================

model PageView {
  id          String   @id @default(cuid())

  // Page info
  path        String
  referrer    String?

  // Visitor info (no cookies, fingerprint-based)
  visitorId   String   @map("visitor_id")
  sessionId   String   @map("session_id")

  // Device & location
  userAgent   String?  @map("user_agent")
  deviceType  String?  @map("device_type") // desktop, mobile, tablet
  browser     String?
  os          String?
  country     String?
  city        String?

  // UTM parameters
  utmSource   String?  @map("utm_source")
  utmMedium   String?  @map("utm_medium")
  utmCampaign String?  @map("utm_campaign")

  // Timestamps
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([path])
  @@index([visitorId])
  @@index([sessionId])
  @@index([createdAt])
  @@index([createdAt, path])
  @@map("page_views")
}

model AnalyticsEvent {
  id          String   @id @default(cuid())

  // Event info
  eventType   String   @map("event_type") // click, form_submit, scroll, etc.
  eventName   String   @map("event_name") // cta_click, quote_submit, etc.
  eventData   Json?    @map("event_data")

  // Page context
  path        String

  // Visitor info
  visitorId   String   @map("visitor_id")
  sessionId   String   @map("session_id")

  // Timestamps
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([eventType, eventName])
  @@index([visitorId])
  @@index([createdAt])
  @@map("analytics_events")
}

model DailyStats {
  id              String   @id @default(cuid())
  date            DateTime @unique @db.Date

  // Traffic stats
  pageViews       Int      @default(0) @map("page_views")
  uniqueVisitors  Int      @default(0) @map("unique_visitors")
  sessions        Int      @default(0)

  // Engagement
  avgSessionDuration Int   @default(0) @map("avg_session_duration") // in seconds
  bounceRate      Float    @default(0) @map("bounce_rate")

  // Conversions
  quoteRequests   Int      @default(0) @map("quote_requests")
  appointments    Int      @default(0)

  // Device breakdown
  desktopVisits   Int      @default(0) @map("desktop_visits")
  mobileVisits    Int      @default(0) @map("mobile_visits")
  tabletVisits    Int      @default(0) @map("tablet_visits")

  // Timestamps
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@index([date])
  @@map("daily_stats")
}

// ============================================================================
// PROJECTS - Portfolio projects
// ============================================================================

model Project {
  id            String   @id @default(cuid())

  // Basic info
  title         String
  slug          String   @unique
  description   String?  @db.Text
  shortDescription String? @map("short_description")

  // Categorization
  category      String   // Totaalrenovatie, Renovatie, Afwerking, etc.
  location      String
  year          Int

  // Display
  featured      Boolean  @default(false)
  sortOrder     Int      @default(0) @map("sort_order")
  isPublished   Boolean  @default(true) @map("is_published")

  // Images
  mainImage     String?  @map("main_image")

  // Timestamps
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  images        ProjectImage[]

  @@index([isPublished, sortOrder])
  @@index([featured])
  @@index([category])
  @@map("projects")
}

model ProjectImage {
  id          String   @id @default(cuid())

  // Image info
  url         String
  alt         String?
  caption     String?
  sortOrder   Int      @default(0) @map("sort_order")
  isBefore    Boolean  @default(false) @map("is_before") // for before/after
  isAfter     Boolean  @default(false) @map("is_after")

  // Relations
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String   @map("project_id")

  // Timestamps
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([projectId, sortOrder])
  @@map("project_images")
}

// ============================================================================
// SETTINGS - Site configuration
// ============================================================================

model Setting {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String   @db.Text
  type        String   @default("string") // string, number, boolean, json
  category    String   @default("general") // general, contact, seo, notifications
  description String?

  // Timestamps
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([category])
  @@map("settings")
}

// ============================================================================
// CONTENT - Editable content blocks
// ============================================================================

model ContentBlock {
  id          String   @id @default(cuid())

  // Identification
  page        String   // home, about, services, etc.
  section     String   // hero, features, cta, etc.
  key         String   // title, subtitle, description, etc.

  // Content
  content     String   @db.Text
  type        String   @default("text") // text, html, markdown, image

  // Timestamps
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@unique([page, section, key])
  @@index([page])
  @@map("content_blocks")
}

// ============================================================================
// MEDIA - Media library
// ============================================================================

model MediaFile {
  id          String   @id @default(cuid())

  // File info
  filename    String
  originalName String  @map("original_name")
  mimeType    String   @map("mime_type")
  size        Int      // in bytes
  url         String

  // Image specific
  width       Int?
  height      Int?
  alt         String?

  // Organization
  folder      String   @default("/")
  tags        String[] @default([])

  // Timestamps
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([folder])
  @@index([mimeType])
  @@index([createdAt])
  @@map("media_files")
}
